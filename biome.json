{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": {
					"level": "off"
				}
			},
			"style": {
				"noNonNullAssertion": {
					"level": "off"
				},
				"useSelfClosingElements": {
					"level": "off"
				},
				"useNodejsImportProtocol": {
					"level": "off"
				}
			},
			"complexity": {
				"noForEach": {
					"level": "off"
				}
			},
			"a11y": {
				"useKeyWithClickEvents": {
					"level": "off"
				},
				"noSvgWithoutTitle": {
					"level": "off"
				}
			}
		}
	},
	"files": {
		"ignore": [
			"src/interfaces/**/*.ts"
		]
	}
}
